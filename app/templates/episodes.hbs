<div class="episodes-page">
  <h1 class="episodes-page--title">Season {{season}}</h1>
  
  {{#each model as |episode|}}
    <section class="episodes-page--strip" id="episode-{{episode.number}}">
      <div class="episodes-pages--frame episode-title-frame">
          <h4 class="frame-title">Episode {{episode.number}}</h4>
          <h2 class="episode-title">{{#link-to 'episode' episode.slug}}{{episode.title}}{{/link-to}}</h2>
          <div class="episode-date"><strong>{{moment-format episode.eventDate 'MMMM DD, YYYY'}}</strong> at {{moment-format episode.eventDate 'h:mm a'}}</div>
          
          {{gem-episode-call-to-action episode=episode}}

      </div>
      <div class="episodes-pages--frame episode-topics-frame">
        <h4 class="frame-title">Topics</h4>
        <ul class="frame-rows">
          {{#each episode.presentationTopics as |topic|}}
            <li class="frame-row">
              <h4 class="row-title">{{topic.title}}</h4>
              {{{topic.excerpt}}}
            </li>
          {{/each}}
        </ul>
      </div>
      <div class="episodes-pages--frame episode-guests-frame">
        <h4 class="frame-title">Guests</h4>
        <ul class="frame-rows">
          {{#each episode.presentationTopics as |topic|}}
            <li class="frame-row">
              <img class="row-thumbnail" src={{topic.presenter.featured.thumbnail.url}} alt={{topic.presenter.title}}>
              <h4 class="row-title">{{topic.presenter.title}}</h4>
              {{{topic.presenter.excerpt}}}
            </li>
          {{/each}}
        </ul>
      </div>
    </section>
  {{/each}}
  
</div>
