{{head-data
  title=model.title
  img=model.featured.medium.url
  twitter:creator=model.presenter.twitter
  twitter:player=(vimeo-player-url model.vimeo)
  twitter:card='player'
}}
{{scroll-to position=0}}

<article class="video-page">
  <main>
    {{responsive-vimeo-video model.vimeo}}
    {{#if (or media.isMobile media.isTablet)}}
      {{gem-video-details model=model}}
    {{/if}}
    {{disqus-comments identifier=model.title}}
  </main>
  <aside>
    {{#if (or media.isJumbo media.isDesktop)}}
      {{gem-video-details model=model}}
    {{/if}}
    {{#if model.related}}
      <div class="video-page--related">
        <h3 class="video-page--section-title">Related Videos</h3>
        {{#each model.related as |video|}}
          <div class="video-card-holder">
           {{video-card model=video size='small' show-footer=true}}
          </div>
        {{/each}}
      </div>
    {{/if}}
  </aside>
  <section>
    
  </section>
</article>