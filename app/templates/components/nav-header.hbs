{{#if withHero}}
  {{link-to '' 'index' classNames="go-home" title="Go home"}}
  <h1 class="font-bree-semibold">{{or headData.heroTitle headData.title}}</h1>
  {{#if headData.heroSubTitle}}
    <span class="font-bree-semibold hero-sub-title">{{headData.heroSubTitle}}</span>
  {{/if}}
{{else}}
  <nav>
    {{link-to '' 'index' classNames="go-home" title="Go home"}}
    {{#if isCollapsible}}
      <button {{action (action (toggle "isCollapsed" this))}} class="toggle-menu">{{title}}</button>
      {{#liquid-if isCollapsed}}
        {{yield}}
      {{/liquid-if}}
    {{else}}
      {{yield}}
    {{/if}}
  </nav>
{{/if}}